<h1>TRADERS</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
        </tr>
    </thead>


    <tbody>
        <% @users.each do |user| %>
            <% if user.role == 'trader' %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                    <% if user.approved == true %>
                        <td>Approved</td>
                    <% elsif %>
                        <td>Pending Approval</td>
                    <% end %>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>