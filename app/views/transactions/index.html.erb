<p style="color: green"><%= notice %></p>

<h1>Transactions</h1>

<div id="transactions">
  <table class="table">
      <thead>
        <tr>
          <th>Stock</th>
          <th>Transaction</th>
          <th>Price</th>
          <th>Shares</th>
          <th>User</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @transactions.each do |transaction| %>
          <tr>
            <td><%= transaction.stock_name %></td>
            <td><%= transaction.transaction_type %></td>
            <td><%= transaction.price %></td>
            <td><%= transaction.shares %></td>
            <td><%= transaction.email %></td>
            <td><%= link_to "Show this transaction", transaction %></td>
          </tr>
        <% end %>
    </tbody>
  </table>
</div>

<%= link_to "See all stocks", stocks_path %>
