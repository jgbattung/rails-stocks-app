<%= form_with(model: transaction) do |form| %>
  <% if transaction.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>You are <%= @user.email %></p> 

  <div>
    <%= form.label :stock_name, style: "display: block" %>
    <%= form.text_field :stock_name, disabled: true, value: @stock.company_name %>
  </div>

  <div>
    <%= form.label :type, style: "display: block" %>
    <%= form.select :transaction_type, ['buy', 'sell'] %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, disabled: true, value: @stock.latest_price %>
  </div>

  <div>
    <%= form.label :shares, style: "display: block" %>
    <%= form.number_field :shares %>
  </div>

  <div>
    <%= form.hidden_field :stock_id, value: @stock.id %>
  </div>

  <div>
    <%= form.hidden_field :email, value: @stock.id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
